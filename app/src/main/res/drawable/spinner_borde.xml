<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="?colorOutline"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Capa de la flecha con inset -->
    <item android:gravity="end|center_vertical">
        <inset android:drawable="@drawable/flecha" android:insetRight="7dp"/>
    </item>
</layer-list>