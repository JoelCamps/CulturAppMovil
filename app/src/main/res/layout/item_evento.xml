<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/borde_negro">

        <TextView
            android:id="@+id/txtNombreEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del evento"
            android:fontFamily="@font/alkatrabariablefontwght"
            android:textColor="@color/negro"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fechaInicio"
                android:textColor="@color/negro"
                android:fontFamily="@font/dmseriftextregular"/>

            <TextView
                android:id="@+id/txtFechaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/dmseriftextregular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo"
                android:textColor="@color/negro"
                android:fontFamily="@font/dmseriftextregular"/>

            <TextView
                android:id="@+id/txtTipoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/dmseriftextregular"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
