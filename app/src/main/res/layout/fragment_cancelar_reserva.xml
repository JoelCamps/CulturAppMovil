<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblNombreEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/negro"
        android:textSize="40sp"
        android:fontFamily="@font/alkatrabariablefontwght"
        android:layout_marginVertical="15dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/edittext_personalizado"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fechaInicio"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/dmseriftextregular"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/lblFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:fontFamily="@font/dmseriftextregular"
                android:paddingVertical="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fechaFinal"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/dmseriftextregular"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/lblFechFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:fontFamily="@font/dmseriftextregular"
                android:paddingVertical="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/dmseriftextregular"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/lblTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:fontFamily="@font/dmseriftextregular"
                android:paddingVertical="7dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/dmseriftextregular"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:fontFamily="@font/dmseriftextregular"
                android:paddingVertical="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sala"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/dmseriftextregular"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/lblSala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:fontFamily="@font/dmseriftextregular"
                android:paddingVertical="7dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion"
        android:textColor="@color/negro"
        android:textSize="30sp"
        android:fontFamily="@font/alkatrabariablefontwght"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_personalizado"
        android:textColor="@color/negro"
        android:textSize="20sp"
        android:fontFamily="@font/dmseriftextregular"
        android:paddingVertical="7dp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/lblEntradas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro"
            android:textSize="30sp"
            android:fontFamily="@font/alkatrabariablefontwght"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entradas"
            android:textColor="@color/negro"
            android:textSize="30sp"
            android:fontFamily="@font/alkatrabariablefontwght"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancelar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelarReserva"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        android:fontFamily="@font/alkatrabariablefontwght"
        android:textStyle="bold"
        android:background="@drawable/boton_perso_rojo"
        android:layout_marginBottom="20dp"/>

</LinearLayout>